@model Cadeteria

@{
    ViewData["Title"] = "Lista De Cadetes";
}

<h1>@ViewData["Title"]</h1>

<h2>@Model.Nombre @Model.Telefono</h2>

<table>
    <tr>
        <td>Id</td>
        <td>Nombre</td>
        <td>Direccion</td>
        <td>Telefono</td>
        <td></td>
        <td></td>
    </tr>
@foreach (var Cadete in Model.Cadetes)
{
    <form asp-action="ListaDeCadetes" method="post">
    <tr>
    <td><label name="id"><input size="1" type="text" name="id" value="@Cadete.Id" readonly="readonly"></label></td>
    <td>@Cadete.Nombre</td>
    <td>@Cadete.Direccion</td>
    <td>@Cadete.Telefono</td>
    <td><button type="submit">Eliminar</button></td>
    <td><a href="EditarCadete?id=@Cadete.Id">Editar</a></td>
    </tr>
    </form>
}
</table>
<a href="GuardarCSV">Guardar en el CSV</a>