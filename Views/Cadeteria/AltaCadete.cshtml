@model tl2_tp4_2022_loboser.ViewModels.AltaCadeteViewModel

@{
    ViewData["Title"] = "Alta Cadete";
}

<body>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>
    <main>
        <form asp-controller="Cadeteria" asp-action="AltaCadete" method="post">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" asp-for="Nombre">Nombre</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" asp-for="Nombre" placeholder="Nombre">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" asp-for="Direccion">Dirección</label>
                <div class="col-sm-6">
                    <input class="form-control" type="text" asp-for="Direccion" placeholder="Dirección">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label" asp-for="Telefono">Teléfono</label>
                <div class="col-sm-6">
                    <input class="form-control" type="tel" asp-for="Telefono" placeholder="Teléfono">
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <input class="btn btn-primary" type="submit" value="Enviar">
                </div>
                <div class="col-sm-3 d-grid">
                    <input class="btn btn-danger" type="reset" value="Borrar">
                </div>
            </div>
        </form>
    </main>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}