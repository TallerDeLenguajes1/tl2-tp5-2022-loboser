@model List<tl2_tp4_2022_loboser.ViewModels.PedidoViewModel>
@{
    ViewData["Title"] = "VerPedidosClientes";
}

<h1>Ver Pedidos del Cliente @ViewBag.Nombre</h1>

<div>
    <table>
        <tr>
        <td>Nro</td>
        <td>Observacion</td>
        <td>Estado</td> 
        <td>Id cadete asignado</td>
        <td></td>
    </tr>
    @foreach (var Pedido in Model)
    {
        <tr>
        <td>@Pedido.Nro</td>
        <td>@Pedido.Obs</td>
        <td>@Pedido.Estado</td>
        <td>@Pedido.IdCadeteAsignado</td>
        <td><a href="../../Pedido/CambiarEstado?nro=@Pedido.Nro">Cambiar estado</a></td>
        </tr>
    }
</table>
</div>