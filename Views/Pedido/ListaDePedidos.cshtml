@model List<tl2_tp4_2022_loboser.ViewModels.PedidoViewModel>

@{
    ViewData["Title"] = "Lista De Pedidos";
}

<div align="center" style="text-align:center">
    <h1>@ViewData["Title"]</h1>
    <div>
        <h2>Pedidos Asignados</h2>
        <table align="center">
            <tr>
            <td>Nro</td>
            <td>Nombre del cliente</td>
            <td>Observacion</td>
            <td>Direccion</td>
            <td>Datos referencia direccion</td>
            <td>Nombre del cadete asignado</td>
            <td>Estado</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            </tr>
            @foreach (var Pedido in Model)
            {
                if (Pedido.IdCadeteAsignado != 0 && Pedido.ClienteId != 0)
                {
                    <tr>
                    <td>@Pedido.Nro</td>
                    <td>@Pedido.Obs</td>
                    <td>@Pedido.ClienteNombre</td>
                    <td>@Pedido.ClienteDireccion</td>
                    <td>@Pedido.ClienteDatosReferenciaDireccion</td>
                    <td>@Pedido.NombreCadeteAsignado</td>
                    <td>@Pedido.Estado</td>
                    <td><a href="BajaPedido?nro=@Pedido.Nro">Eliminar</a></td>
                    <td><a href="EditarPedido?nro=@Pedido.Nro">Editar</a></td>
                    <td><a href="CambiarEstado?nro=@Pedido.Nro&aux=Lista">Cambiar estado</a></td>
                    <td><a href="AsignarACliente?nro=@Pedido.Nro">Asignar a cliente</a></td>
                    <td><a href="AsignarACadete?nro=@Pedido.Nro">Asignar a cadete</a></td>
                    </tr>
                }
            }
        </table>
    </div>

    <div>
        <h2>Pedidos sin asignar Cadete</h2>
        <table align="center">
            <tr>
            <td>Nro</td>
            <td>Nombre del cliente</td>
            <td>Observacion</td>
            <td>Direccion</td>
            <td>Datos referencia direccion</td>
            <td>Nombre del cadete asignado</td>
            <td>Estado</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            </tr>
            @foreach (var Pedido in Model)
            {
                if (Pedido.IdCadeteAsignado == 0 && Pedido.ClienteId != 0)
                {
                    <tr>
                    <td>@Pedido.Nro</td>
                    <td>@Pedido.Obs</td>
                    <td>@Pedido.ClienteNombre</td>
                    <td>@Pedido.ClienteDireccion</td>
                    <td>@Pedido.ClienteDatosReferenciaDireccion</td>
                    <td>-</td>
                    <td>@Pedido.Estado</td>
                    <td><a href="BajaPedido?nro=@Pedido.Nro">Eliminar</a></td>
                    <td><a href="EditarPedido?nro=@Pedido.Nro">Editar</a></td>
                    <td><a href="CambiarEstado?nro=@Pedido.Nro&aux=Lista">Cambiar estado</a></td>
                    <td><a href="AsignarACliente?nro=@Pedido.Nro">Asignar a cliente</a></td>
                    <td><a href="AsignarACadete?nro=@Pedido.Nro">Asignar a cadete</a></td>
                    </tr>
                }
            }
        </table>
    </div>

    <div>
        <h2>Pedidos sin asignar Cliente</h2>
        <table align="center">
            <tr>
            <td>Nro</td>
            <td>Nombre del cliente</td>
            <td>Observacion</td>
            <td>Direccion</td>
            <td>Datos referencia direccion</td>
            <td>Nombre del cadete asignado</td>
            <td>Estado</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            </tr>
            @foreach (var Pedido in Model)
            {
                if (Pedido.IdCadeteAsignado != 0 && Pedido.ClienteId == 0)
                {
                    <tr>
                    <td>@Pedido.Nro</td>
                    <td>@Pedido.Obs</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>@Pedido.NombreCadeteAsignado</td>
                    <td>@Pedido.Estado</td>
                    <td><a href="BajaPedido?nro=@Pedido.Nro">Eliminar</a></td>
                    <td><a href="EditarPedido?nro=@Pedido.Nro">Editar</a></td>
