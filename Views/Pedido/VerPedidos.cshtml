@model List<tl2_tp4_2022_loboser.ViewModels.PedidoViewModel>
@{
    ViewData["Title"] = "Pedidos";
}

<h1>@ViewData["Title"] de @ViewBag.Nombre</h1>

<div>
    <table>
        <tr>
        <td>Nro</td>
        <td>Nombre</td>
        <td>Observacion</td>
        <td>Direccion</td>
        <td>Datos de Referencia</td>
        <td>Estado</td>
        <td></td>
    </tr>
    @foreach (var Pedido in Model)
    {
        <tr>
        <td>@Pedido.Nro</td>
        <td>@Pedido.Cliente.Nombre</td>
        <td>@Pedido.Obs</td>
        <td>@Pedido.Cliente.Direccion</td>
        <td>@Pedido.Cliente.DatosReferenciaDireccion</td>
        <td>@Pedido.Estado</td>
        <td><a href="../../Pedido/CambiarEstado?nro=@Pedido.Nro">Cambiar Estado</a></td>
        </tr>
    }
</table>
</div>